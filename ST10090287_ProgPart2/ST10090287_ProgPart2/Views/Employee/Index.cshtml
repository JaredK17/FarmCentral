@model IEnumerable<ST10090287_ProgPart2.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<style>
    <style >
    .employee-table {
        width: 100%;
        border-collapse: collapse;
    }

    .employee-table th,
    .employee-table td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .employee-table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    .employee-table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .employee-actions a {
        margin-right: 5px;
        text-decoration: none;
        color: #333;
    }
</style>

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<head>
   
    <table class="table employee-table">
        <thead>

            <tr>
                <th>
                    <span class="display-name">EMPLOYEE ID</span>
                </th>
                <th>
                    <span class="display-name">EMPLOYEE NAME</span>
                </th>
                <th>
                    <span class="display-name">EMPLOYEE SURNAME</span>
                </th>
                <th>
                    <span class="display-name">EMPLOYEE EMAIL</span>
                </th>
                <th>
                    <span class="display-name">EMPLOYEE PASSWORD</span>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="display-value">@Html.DisplayFor(modelItem => item.EMPLOYEE_ID)</span>
                    </td>
                    <td>
                        <span class="display-value">@Html.DisplayFor(modelItem => item.EMPLOYEE_NAME)</span>
                    </td>
                    <td>
                        <span class="display-value">@Html.DisplayFor(modelItem => item.EMPLOYEE_SURNAME)</span>
                    </td>
                    <td>
                        <span class="display-value">@Html.DisplayFor(modelItem => item.EMPLOYEE_EMAIL)</span>
                    </td>
                    <td>
                        <span class="display-value">@Html.DisplayFor(modelItem => item.EMPLOYEE_PASSWORD)</span>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EMPLOYEE_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EMPLOYEE_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EMPLOYEE_ID })
                    </td>
                </tr>

            }
        </tbody>

</head>
    </table>
