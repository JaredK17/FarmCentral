@model IEnumerable<ST10090287_ProgPart2.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
    h1 {
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .table thead th {
            background-color: grey;
            font-weight: bold;
        }

        .table tbody td {
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e9e9e9;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
            margin-right: 5px;
        }

    .filter-container {
        margin-bottom: 10px;
    }
</style>


<h1 style="color: blue; font-size: 24px; text-align: center;">FARMER PRODUCTS</h1>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>

</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PRODUCT_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRODUCT_TYPE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRODUCT_PRICE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRODUCT_QTY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FARMER_ID)  
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PRODUCT_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRODUCT_TYPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRODUCT_PRICE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRODUCT_QTY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FARMER_ID)
                </td>
                <td>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", new { id = item.PRODUCT_ID })'">Edit</button>
                    <button class="btn btn-info" onclick="location.href='@Url.Action("Details", new { id = item.PRODUCT_ID })'">Details</button>
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.PRODUCT_ID })'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

