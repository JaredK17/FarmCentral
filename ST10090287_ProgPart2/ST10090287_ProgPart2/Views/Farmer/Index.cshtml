@model IEnumerable<ST10090287_ProgPart2.Models.Farmers>

@{
    ViewData["Title"] = "Index";
}

<style>
    h1 {
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 8px;
            border: 1px solid #ccc;
        }

        .table thead th {
            background-color: grey;
            font-weight: bold;
        }

        .table tbody td {
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e9e9e9;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
            margin-right: 5px;
        }
</style>


<h1>FARMER DETAILS</h1>
<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ProductsPage")'">Go to Products</button>
</p>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Create New</button>
</p>

<label for="filter" style="color: blue; font-weight: bold;">Filter by Farmer Name:</label>
<input type="text" id="filter" style="width: 200px; padding: 5px;">

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FARMER_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FARMER_NAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FARMER_SURNAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FARMER_EMAIL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FARMER_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FARMER_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FARMER_SURNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FARMER_EMAIL)
            </td>
            <td>
                ***********543
            </td>
            <td>
                <button class="btn btn-primary" onclick="location.href='@Url.Action("Edit", new { id = item.FARMER_ID })'">Edit</button>
                <button class="btn btn-info" onclick="location.href='@Url.Action("Details", new { id = item.FARMER_ID })'">Details</button>
                <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.FARMER_ID })'">Delete</button>
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    function redirectToProducts() {
        window.location.href = '@Url.Action("Index", "Product")';
    }
    document.getElementById('filter').addEventListener('input', function () {
        var filterValue = this.value.trim().toUpperCase();
        var table = document.querySelector('.table');
        var rows = table.querySelectorAll('tbody tr');

        rows.forEach(function (row) {
            var farmerName = row.querySelector('td:nth-child(2)').textContent.toUpperCase();

            if (farmerName.includes(filterValue)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>
